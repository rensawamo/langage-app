# editorconfig.org

root = true

# 全てのファイルに適用される設定
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Dartファイルに適用される設定
[*.dart]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# YAMLファイルに適用される設定
[*.yaml]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true 
insert_final_newline = true

# Markdownファイルに適用される設定
[*.md]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = true